{
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "removeComments": false,
    "target": "ES5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  }
}
